{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "es2015",
      "dom"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./release/src",
    "sourceMap": false,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "files": [
    "./src/public_api.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "release",
    "skipTemplateCodegen": true,
    "debug": true,
    "entryModule": "index#ModuleAModule",
    "flatModuleOutFile": "index",
    "flatModuleId": "@myapp/library",

    "skipMetadataEmit": false,
    "strictMetadataEmit": true
  }
}